<script is:inline>
	document.addEventListener("DOMContentLoaded", () => {
		document.querySelectorAll(".image-wrapper").forEach((wrapper) => {
			wrapper.addEventListener("click", (e) => {
				// If already touched, allow link click
				if (wrapper.classList.contains("touched")) return;

				// Prevent accidental tap-through
				e.preventDefault();
				e.stopPropagation();

				// Remove .touched from all others
				document.querySelectorAll(".image-wrapper.touched").forEach((el) => {
					if (el !== wrapper) el.classList.remove("touched");
				});

				// Add it to the tapped one
				wrapper.classList.add("touched");
			});
		});

		// Remove touched class when tapping outside
		document.addEventListener("click", (e) => {
			if (!e.target.closest(".image-wrapper")) {
				document.querySelectorAll(".image-wrapper.touched").forEach((el) =>
					el.classList.remove("touched")
				);
			}
		});
	});
</script>





